{
    "Habit": {
      "$jsonSchema": {
        "bsonType": "object",
        "required": ["Habit_Id", "Partnership_id", "Habit_name", "Habit_type", "Habit_category"],
        "properties": {
          "Habit_Id": {
            "bsonType": "objectId",
            "description": "Primary key"
          },
          "Partnership_id": {
            "bsonType": "objectId",
            "description": "Foreign key reference to Partnership"
          },
          "Habit_name": {
            "bsonType": "string",
            "description": "Clear, action-oriented habit name"
          },
          "Habit_type": {
            "enum": ["build", "break"],
            "description": "Whether building a positive habit or breaking a negative one"
          },
          "Habit_description": {
            "bsonType": "string",
            "description": "Optional detailed description of what counts as completion"
          },
          "created_at": {
            "bsonType": "date",
            "description": "Habit creation timestamp"
          },
          "is_active": {
            "bsonType": "bool",
            "description": "Whether habit is currently active",
            "default": true
          },
          "Partnership": {
            "bsonType": "object",
            "description": "Partnership details",
            "default": false
          },
          "Frequency": {
            "bsonType": "integer",
            "description": "Describes the frequency",
            "default": 0
          },
          "checkedIn": {
            "bsonType": "bool",
            "description": "Determines whether a person is checked in ",
            "default": false
          },
          "habit_progress": {
            "bsonType": "integer",
            "description": "Function that describes the habit progress",
            "default": 0
          },
          "current_streak": {
            "bsonType": "integer",
            "description": "The streak count of the habit currently",
            "default": 0
          },
          "longest_streak": {
            "bsonType": "integer",
            "description": "Longest streak held by the habit",
            "default": 0
          }
        }
      },
      "indexes": [
        {"key": {"Partnership_id": 1}},
        {"key": {"is_active": 1}}
      ]
    }
  }